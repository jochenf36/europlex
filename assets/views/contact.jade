extend layout

block content
  div.container
    .content-container
      .row
        .col.s12
          h4 Leave your information
      .row
        form.col.s12
          .row
            .input-field.col.s6
              input#first_name.validate(type='text')
              label(for='first_name') First Name

            .input-field.col.s6
              input#company.validate(type='text')
              label(for='company') Company
          .row
            .input-field.col.s6
              input#email.validate(type='email')
              label(for='email' data-error='Invalid email') Email
            .input-field.col.s6
              input#last_name.validate(type='text')
              label(for='last_name') Last Name
          .row
            .input-field.col.s6
              textarea#icon_prefix2.materialize-textarea
              label(for='icon_prefix2') Comment
          .row
            div.contact-space
              button.contact-space.btn.waves-effect.waves-light(type='submit', name='action')
                | Submit
                i.material-icons.right send
      
